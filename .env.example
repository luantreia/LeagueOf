# Database
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGODB_URI=mongodb://admin:your_secure_password_here@localhost:27017/leagueof?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# JWT
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_key_minimum_32_characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# API
API_PORT=4000
API_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Feature Flags
ENABLE_THIRD_PARTY_INTEGRATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true

# Third Party APIs (add as needed)
RIOT_API_KEY=
STEAM_API_KEY=
DISCORD_WEBHOOK_URL=

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
